<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.conner.shop.web.api.dao.OrderShippingDao">
    <sql id="columns">
          a.shop_id,
          a.user_id,
          a.ping,
          a.created
    </sql>

    <insert id="save">
        INSERT INTO `shop`.`order_shipping` (`shop_id`, `user_id`, `ping`, `created`)
        VALUES
          (#{shopId}, #{userId}, #{ping}, #{created}) ;
    </insert>

    <select id="getInfo" resultType="OrderShipping">
        SELECT
        <include refid="columns" />
        FROM
        `shop`.`order_shipping` AS a
        WHERE
        a.shop_id = #{shopId}
        ORDER BY a.created DESC
    </select>

    <delete id="delete">
        DELETE FROM `shop`.`order_shipping`
        WHERE shop_id = #{id} AND user_id = #{uId} AND created = #{created}
    </delete>

</mapper>